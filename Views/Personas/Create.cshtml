@model SmartAdmin.Web.Models.Sistema.Persona

@{
    ViewData["Title"] = "Create";
}

<!-- MAIN CONTENT -->
<div id="content">
   
    <!-- widget grid -->
    <section id="widget-grid" class="">

        <!-- START ROW -->
        <div class="row">
            <!-- NEW COL START -->
            <article class="col-sm-12 col-md-12 col-lg-12">
                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget" id="wid-id-1" data-widget-editbutton="false" data-widget-custombutton="false">

                    <header>
                        <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
                        <h2>Persona</h2>
                    </header>
                    <!-- widget div-->
                    <div>

                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->

                        </div>
                        <!-- end widget edit box -->
                        <!-- widget content -->

                        <div class="widget-body no-padding">

                            <form asp-action="Create" id="checkout-form" class="smart-form">

                                <fieldset>
                                    <div class="row">
                                        <section class="col col-6">
                                            <label>@Html.DisplayNameFor(model => model.Cedula)</label>
                                            <label class="input">
                                                <i class="icon-prepend fa fa-user"></i>
                                                <input maxlength="10" type="number" asp-for="Cedula" class="form-control" />
                                                <span asp-validation-for="Cedula" class="text-danger"></span>
                                            </label>
                                        </section>
                                        <section class="col col-6">
                                            <label>@Html.DisplayNameFor(model => model.Nombre)</label>
                                            <label class="input">
                                                <i class="icon-prepend fa fa-user"></i>
                                                <input type="text" asp-for="Nombre" class="form-control" />
                                                <span asp-validation-for="Nombre" class="text-danger"></span>
                                            </label>
                                        </section>
                                    </div>
                                    <div class="row">
                                        <section class="col col-6">
                                            <label>@Html.DisplayNameFor(model => model.Apellido)</label>
                                            <label class="input">
                                                <i class="icon-prepend fa fa-user"></i>
                                                <input type="text" asp-for="Apellido" class="form-control" />
                                                <span asp-validation-for="Apellido" class="text-danger"></span>
                                            </label>
                                        </section>
                                        <section class="col col-6">
                                            <label>@Html.DisplayNameFor(model => model.Direccion)</label>
                                            <label class="input">
                                                <i class="icon-prepend fa fa-user"></i>
                                                <input maxlength="32" asp-for="Direccion" class="form-control" />
                                                <span asp-validation-for="Direccion" class="text-danger"></span>
                                            </label>
                                        </section>
                                    </div>
                                </fieldset>

                                <footer>

                                    <input type="submit" value="Guardar" class="btn btn-primary" />
                                    <a asp-action="Index" class="btn btn-default">Cancelar</a>
                                </footer>
                            </form>
                        </div>
                        <!-- end widget content -->
                    </div>
                    <!-- end widget div -->
                </div>
                <!-- end widget -->

            </article>

        </div>
        <!-- END ROW -->
    </section>
    <!-- end widget grid -->
    <!-- Modal -->

</div>
<!-- END MAIN CONTENT -->
@section Scripts {

}