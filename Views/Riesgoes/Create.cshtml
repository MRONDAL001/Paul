@model SmartAdmin.Web.Models.Sistema.Riesgo

@{
    ViewData["Title"] = "Create";
}
   
<div id="content">

    <!-- widget grid -->
    <!-- NEW COL START -->
    <article class="col-sm-12 col-md-12 col-lg-12">
        <!-- Widget ID (each widget will need unique ID)-->
        <div class="jarviswidget" id="wid-id-1" data-widget-editbutton="false" data-widget-custombutton="false">

            <header>
                <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
                <h2>Riesgo</h2>
            </header>
            <!-- widget div-->
            <div>

                <!-- widget edit box -->
                <div class="jarviswidget-editbox">
                    <!-- This area used as dropdown edit box -->

                </div>
                <!-- end widget edit box -->
                <!-- widget content -->

                <div class="widget-body no-padding">

                    <section id="widget-grid" class="">
                        <form asp-action="Create" id="checkout-form" class="smart-form">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <fieldset>
                                <div class="row">
                                    <section class="col col-lg-12">
                                        <label>@Html.DisplayNameFor(model => model.Descripcion)</label>
                                        <label class="textarea">
                                            <i class="icon-append fa fa-comment"></i>
                                            <textarea rows="3" asp-for="Descripcion"></textarea>
                                            <span asp-validation-for="Descripcion" class="text-danger"></span>
                                        </label>
                                    </section>
                                </div>
                            </fieldset>

                            <footer>

                                <input type="submit" value="Guardar" class="btn btn-primary" />
                                <a asp-action="Index" class="btn btn-default">Cancelar</a>
                            </footer>
                        </form>
                </div>
                <!-- end widget content -->
            </div>
            <!-- end widget div -->
        </div>
        <!-- end widget -->

    </article>

</div>
        <!-- END ROW -->
    </section>
    <!-- end widget grid -->
    <!-- Modal -->

</div>
<!-- END MAIN CONTENT -->
@section Scripts {

}

